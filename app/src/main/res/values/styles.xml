<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="btn_main">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/btn_txt_color</item>
    </style>

    <style name="btn_detail" parent="@style/btn_main">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btn_cancel" parent="@style/btn_detail">
        <item name="android:background">@drawable/btn_cancel</item>
    </style>

    <style name="flex_item">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:background">@drawable/btn_tag</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/txtColor_detail</item>
    </style>

    <style name="error_msg">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/txtSize_err_msg</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="spinner">
        <item name="android:background">#F0F0F0</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>